<%- partial('partial/head') %>
<%- partial('partial/header') %>

<div class="page-content">
    <div class="container">
        <div class="recomands">
            <% page.posts.each(function(post) { %>
            <% if (post.recomand) { %>
            <div class="recomand" style="background-image: url(<%= post.thumbnail %>);">
                <a href="<%= post.path %>"></a>
            </div>
            <% } %>
            <% }); %>
        </div>

        <div class="articles">
        <h2 class="cate-name">设计精选</h2>
        <% page.posts.each(function(post) { %>
        <% if (!post.recomand) { %>
        <article class="article">
            <header class="article-header">
                <h2 class="article-title">
                    <a href="<%= post.path %>"><%= post.title %></a>
                </h2>
            </header>
            <section class="article-excerpt">
                <% if (post.excerpts != '') { %>
                    <p><%= post.excerpts %> ...</p>
                <% } %>
            </section>
            <footer class="article-meta">
                <span><%= post.author || config.author %></span>
                <span>publish at</span>
                <time class="article-date" datetime="<%- date(page.date) %>"><%- date(post.date) %></time>
            </footer>
        </article>
        <% } %>
        <% }); %>
        </div>
    </div>
</div>

<%- partial('partial/footer') %>
<%- partial('partial/foot') %>
